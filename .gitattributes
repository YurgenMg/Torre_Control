# .gitattributes
# Ensure consistent line endings across all platforms

# Auto normalize line endings for all files
* text=auto

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# PowerShell scripts
*.ps1 text eol=crlf
*.psm1 text eol=crlf

# SQL files
*.sql text eol=lf

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Markdown
*.md text eol=lf
*.markdown text eol=lf

# YAML & Config
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
.env* text eol=lf

# Documentation
*.txt text eol=lf
*.csv text eol=lf

# Binary files
*.exe binary
*.bin binary
*.db binary
*.sqlite binary
*.pkl binary
*.pickle binary
*.joblib binary

# Power BI
*.pbix binary
*.pbit binary

# CSV (treat as text)
*.csv text diff=csv

# Documentation diffs
*.md diff=markdown
